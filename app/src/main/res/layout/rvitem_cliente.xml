<?xml version="1.0" encoding="utf-8"?>
 <androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgUsr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/ic_baseline_person_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

           <TextView
                android:id="@+id/rvitem_cliente_nombre"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               android:layout_marginTop="5dp"
               android:layout_marginLeft="5dp"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#000000"
                app:layout_constraintStart_toEndOf="@+id/imgUsr"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/rvitem_cliente_identificación"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintStart_toEndOf="@+id/imgUsr"
                app:layout_constraintTop_toBottomOf="@id/rvitem_cliente_nombre"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/rvitem_cliente_tipo"
                android:text="RUC 12051273366001"
                android:textAlignment="viewStart"
                android:textSize="10sp"
                android:textStyle="bold" />

                <TextView
                    android:id="@+id/rvitem_cliente_tipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    app:layout_constraintTop_toBottomOf="@id/rvitem_cliente_nombre"
                    app:layout_constraintStart_toEndOf="@id/rvitem_cliente_identificación"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Frecuente"
                    android:textSize="10sp"
                    android:textColor="@color/purple_500"
                    android:textStyle="bold"
                    />




</androidx.constraintlayout.widget.ConstraintLayout>
